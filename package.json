{
  "name": "shopping-app-sample",
  "version": "1.0.0",
  "description": "This project is sample app assuming e-commerse business.",
  "author": "yuichiyasui",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w apps/api & npm run dev -w apps/shop",
    "start": "npm run dev -w apps/api & npm run start -w apps/shop",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint-fix": "npm run lint-fix --workspaces --if-present",
    "format": "prettier --write './**/*.{ts,js,tsx.json}'",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.14.1",
    "@graphql-eslint/eslint-plugin": "^3.13.1",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.7.18",
    "eslint": "^8.23.1",
    "husky": "^8.0.1",
    "jest": "^29.3.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "4.9.3"
  },
  "dependencies": {
    "graphql": "^16.6.0"
  }
}
